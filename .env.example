# =============================================================================
# COINBASE API CONFIGURATION
# =============================================================================

# Coinbase API Credentials (CDP API Keys)
# Get these from: https://portal.cdp.coinbase.com/access/api
COINBASE_API_KEY=organizations/{org_id}/apiKeys/{key_id}
COINBASE_API_SECRET=-----BEGIN EC PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END EC PRIVATE KEY-----

# Environment (sandbox for testing, production for live trading)
COINBASE_ENVIRONMENT=sandbox
# COINBASE_ENVIRONMENT=production

# API Timeout (seconds)
COINBASE_TIMEOUT=30

# =============================================================================
# BOT CONFIGURATION
# =============================================================================

# Bot Mode: signals, trading, or combined
BOT_MODE=signals

# Logging Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Data Storage Path
DATA_STORAGE_PATH=./data

# Update Intervals (seconds)
SIGNAL_UPDATE_INTERVAL=60
TRADING_UPDATE_INTERVAL=30
MARKET_DATA_INTERVAL=5

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Default Portfolio ID (leave empty for default)
DEFAULT_PORTFOLIO=

# Risk Management
RISK_PERCENTAGE=2.0
MAX_POSITIONS=5
MAX_DAILY_LOSS=5.0

# Position Sizing
DEFAULT_POSITION_SIZE=100.0
MIN_POSITION_SIZE=10.0
MAX_POSITION_SIZE=1000.0

# Stop Loss and Take Profit (percentages)
DEFAULT_STOP_LOSS=2.0
DEFAULT_TAKE_PROFIT=4.0

# Trading Pairs (comma-separated)
TRADING_PAIRS=BTC-USD,ETH-USD,ADA-USD,SOL-USD

# =============================================================================
# SIGNAL CONFIGURATION
# =============================================================================

# Technical Indicators Settings
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30

MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

BB_PERIOD=20
BB_STD=2

MA_SHORT=10
MA_LONG=50

# Signal Thresholds
SIGNAL_STRENGTH_THRESHOLD=0.7
MIN_VOLUME_THRESHOLD=1000000

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Notification Level: all, important, critical
NOTIFICATION_LEVEL=important

# Console Notifications
ENABLE_CONSOLE_NOTIFICATIONS=true

# File Notifications
ENABLE_FILE_NOTIFICATIONS=true
NOTIFICATION_FILE_PATH=./data/signals/notifications.log

# Webhook Notifications
ENABLE_WEBHOOK_NOTIFICATIONS=false
WEBHOOK_URL=

# Slack Notifications
ENABLE_SLACK_NOTIFICATIONS=false
SLACK_BOT_TOKEN=
SLACK_CHANNEL=#crypto-signals

# Discord Notifications
ENABLE_DISCORD_NOTIFICATIONS=false
DISCORD_WEBHOOK_URL=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Type: sqlite, postgresql, mysql
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///./data/crypto_bots.db

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
ENABLE_REDIS_CACHE=false

# =============================================================================
# MONITORING AND PERFORMANCE
# =============================================================================

# Prometheus Metrics
ENABLE_PROMETHEUS_METRICS=false
PROMETHEUS_PORT=8000

# Performance Settings
ENABLE_ASYNC_PROCESSING=true
MAX_CONCURRENT_REQUESTS=10
REQUEST_RETRY_ATTEMPTS=3
REQUEST_RETRY_DELAY=1

# =============================================================================
# DEVELOPMENT AND DEBUGGING
# =============================================================================

# Debug Mode
DEBUG_MODE=false

# Dry Run Mode (no actual trades)
DRY_RUN_MODE=true

# Backtesting
ENABLE_BACKTESTING=false
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-31

# =============================================================================
# SECURITY
# =============================================================================

# API Rate Limiting
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_SECOND=30

# IP Whitelist (comma-separated, leave empty to disable)
IP_WHITELIST=

# Enable SSL Verification
SSL_VERIFY=true

